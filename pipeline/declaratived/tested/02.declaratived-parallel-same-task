#!/usr/bin/groovy

pipeline {
	agent none

	parameters {
		booleanParam(
			defaultValue: false,
			description: 'Reload Jenkinsfile',
			name: 'RELOAD'
		)
		string(
			defaultValue: '',
			description: 'Custom label for job build',
			name: 'LABEL'
		)
	}

	options {
		timestamps()
	}

	stages {
		stage("Initial") {
			steps {
				script {
					echo "Reload: ${params.RELOAD}, Node: ${params.NODE}, Build label: ${params.LABEL}"

					def reloadOnly = params.RELOAD || currentBuild.number == 1
					if (reloadOnly) {
						currentBuild.displayName = "Reload Jenkinsfile"
					}
				}
			}
		}

		stage("Preparation") {
			when {
				beforeAgent true;
				expression { !params.RELOAD.toBoolean() }
			}

			stages {
				stage("Changing Label") {
					steps {
						script {
							if (params.LABEL) {
								currentBuild.displayName = "${params.LABEL}"
							}		
						}
					}
				}
			}
    	}

    	stage("Parallel run") {
			when {
				beforeAgent true;
				expression { !params.RELOAD.toBoolean() }
			}

			matrix {
				axes {
					axis {
						name "NODE"
						values "java", "python"
					}
				}

				agent { label "${NODE}"}

				stages {
					stage("Node information") {
						steps {
							script {
								def out_printenv = sh(script: 'printenv | grep NODE_NAME', returnStdout:true).trim()
								echo "Output: ${out_printenv}"
							}
						}
					}
				}
			}
    	}
	}

	post {
		always {
			script {
				echo "Send notification"
			}
		}
		success {
			script {
				echo "Success"
			}
		}
		failure {
			script {
				echo "Failure"
			}
		}
		unstable {
			script {
				echo "Unstable"
			}
		}
	}
}
